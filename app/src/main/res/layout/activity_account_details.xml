<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playlists1"
    android:background="@color/black"
    >

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                >

                <ImageButton
                    android:id="@+id/menu3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:backgroundTint="@color/black"
                    app:srcCompat="@drawable/ic_menu" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <ImageButton
                    android:id="@+id/account3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/black"

                    app:srcCompat="@drawable/wrapper_account" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Playlists"
                android:textColor="@color/white"
                android:textSize="30dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="3"
            >

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                >

                <ImageButton
                    android:id="@+id/plcd3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_cd"

                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="Playlist 3"
                    android:textColor="#FFC20F"
                    android:textSize="20dp">

                </TextView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

                <ImageButton
                    android:id="@+id/plcd4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_cd"

                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="Playlist 4"
                    android:textColor="#FFC20F"
                    android:textSize="20dp">

                </TextView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/plcd5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_cd"

                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="Playlist 5"
                    android:textColor="#FFC20F"
                    android:textSize="20dp">

                </TextView>



            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Artists"
                android:textColor="@color/white"
                android:textSize="30dp"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="3"
            >

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

                <ImageButton
                    android:id="@+id/artd3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_despo"
                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="Artist 3"
                    android:textColor="#FFC20F"
                    android:textSize="20dp">

                </TextView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

                <ImageButton
                    android:id="@+id/artd4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_despo"

                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="Artist 4"
                    android:textColor="#FFC20F"
                    android:textSize="20dp">

                </TextView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/artd5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_despo"

                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="Artist 5"
                    android:textColor="#FFC20F"
                    android:textSize="20dp">

                </TextView>



            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="bottom"
            android:background="@drawable/bottombar"
            android:weightSum="7"
            >

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="bottom"
                android:layout_weight="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:padding="18dp"
                    android:text="Song Name"
                    android:textColor="#FFC20F"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    >

                </TextView>




            </RelativeLayout>

            <RelativeLayout

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginBottom="1dp">

                <ImageButton
                    android:id="@+id/playPrev3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_backarrow"

                    >


                </ImageButton>



            </RelativeLayout>
            <RelativeLayout

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginBottom="1dp">

                <ImageButton
                    android:id="@+id/play3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_play">


                </ImageButton>



            </RelativeLayout>
            <RelativeLayout

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginBottom="1dp">

                <ImageButton
                    android:id="@+id/playNext3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/wrapper_forward">


                </ImageButton>



            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#2A2730"
            android:weightSum="4"
            >

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/liked4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="#2A2730"
                    android:src="@drawable/wrapper_heart">

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="bottom"
                    android:text="Liked"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    tools:ignore="RtlCompat">

                </TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/add4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="#2A2730"
                    android:src="@drawable/wrapper_add"
                    >

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="bottom"
                    android:text="Add"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    tools:ignore="RtlCompat">

                </TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/sr4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="#2A2730"
                    android:src="@drawable/wrapper_search">

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="bottom"
                    android:text="Search"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    tools:ignore="RtlCompat">

                </TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="#2A2730"
                    android:src="@drawable/wrapper_ll">

                </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="bottom"
                    android:text="Listen Later"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    tools:ignore="RtlCompat">

                </TextView>


            </RelativeLayout>


        </LinearLayout>

   </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="left"
        android:background="@drawable/gradient_background"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:gravity="center"
            >

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="30dp"
                android:src="@drawable/circle">


            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="User Name"
                android:textColor="#FFC20F"
                android:textSize="25dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                tools:ignore="RtlCompat">


            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/editProf1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Edit Profile"
                android:textColor="#FFC20F"
                android:textSize="25dp"
                android:padding="20dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat">


            </TextView>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/cp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Password"
                android:textColor="#FFC20F"
                android:textSize="25dp"
                android:padding="20dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat">


            </TextView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"


            >

            <TextView
                android:id="@+id/logOut1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:text="Log Out"
                android:textStyle="bold"
                android:textColor="#FFC20F"
                android:textSize="25dp"
                android:padding="20dp"

               >

            </TextView>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:padding="80dp"
                android:src="@drawable/exitn"
                >

            </ImageView>

        </RelativeLayout>



    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

</RelativeLayout>