<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/back8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrowback"

                android:padding="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <EditText
                android:id="@+id/srSong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundbar"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="Search"
                android:textColor="#FFC20F" />
        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Recent Searches"
            android:textColor="#FFC20F"
            android:padding="25dp"
            android:textStyle="bold"
            android:textSize="15dp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            >

            <ImageView
                android:id="@+id/rs1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/wrapper_despo"
                android:padding="10dp">

            </ImageView>

            <TextView

                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Song Name"
                android:textColor="@color/white"
                android:padding="30dp"
                android:textAlignment="center"
                >

            </TextView>

            <TextView

                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:padding="20dp"
                android:text="Artist"
                android:textAlignment="center"
                android:textColor="#FFC20F"
                tools:ignore="RtlCompat">

            </TextView>

            <ImageButton
                android:id="@+id/cross1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"

                android:layout_centerInParent="true"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_cross">

            </ImageButton>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            >

            <ImageView
                android:id="@+id/rs2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/wrapper_cd"
                android:padding="10dp">

            </ImageView>

            <TextView

                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Playlist Name"
                android:textColor="@color/white"
                android:padding="30dp"
                android:textAlignment="center"
                >

            </TextView>

            <TextView

                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:padding="20dp"
                android:text="Artist"
                android:textAlignment="center"
                android:textColor="#FFC20F"
                tools:ignore="RtlCompat">

            </TextView>

            <ImageButton
                android:id="@+id/cross2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"

                android:layout_centerInParent="true"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_cross">

            </ImageButton>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            >

            <ImageView
                android:id="@+id/rs3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/wrapper_cd"
                android:padding="10dp">

            </ImageView>

            <TextView

                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Song Name"
                android:textColor="@color/white"
                android:padding="30dp"
                android:textAlignment="center"
                >

            </TextView>

            <TextView

                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:padding="20dp"
                android:text="Artist"
                android:textAlignment="center"
                android:textColor="#FFC20F"
                tools:ignore="RtlCompat">

            </TextView>

            <ImageButton
                android:id="@+id/cross3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"

                android:layout_centerInParent="true"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_cross">

            </ImageButton>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#2A2730"
        android:weightSum="4"
        >

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/liked14"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_heart">

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Liked"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/add14"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_add"
                >

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Add"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageButton
                android:id="@+id/sr14"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_search">

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Search"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ll14"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_ll">

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Listen Later"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>