<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playlists1"
    android:background="@color/black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/ic_menu" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <ImageButton
                android:id="@+id/account1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/wrapper_account" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Playlists"
            android:textColor="@color/white"
            android:textSize="30dp"
            >

        </TextView>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:weightSum="3"
        >
       <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            >

           <ImageView
               android:id="@+id/pl1"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:backgroundTint="@color/black"
               android:src="@drawable/wrapper_cd"



               >

           </ImageView>

           <TextView
               android:id="@+id/song_name"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:layout_alignParentRight="true"
               android:layout_centerInParent="true"
               android:gravity="bottom"
               android:padding="10dp"
               android:text="Playlist 1"
               android:textColor="#FFC20F"
               android:textSize="20dp">

           </TextView>



        </RelativeLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Artists"
            android:textColor="@color/white"
            android:textSize="30dp"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:weightSum="3"
        >

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >

            <ImageButton
                android:id="@+id/art1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_atif"
                >

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Artist 1"
                android:textColor="#FFC20F"
                android:textSize="20dp">

            </TextView>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >

            <ImageButton
                android:id="@+id/art2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_atif"

                >

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Artist 2"
                android:textColor="#FFC20F"
                android:textSize="20dp">

            </TextView>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/art3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_atif"

                >

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Artist 3"
                android:textColor="#FFC20F"
                android:textSize="20dp">

            </TextView>



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:background="@drawable/bottombar"
        android:weightSum="7"
        >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="bottom"
            android:layout_weight="3"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:padding="18dp"
                android:text="Song Name"
                android:textColor="#FFC20F"
                android:textSize="18dp"
                android:textStyle="bold"

                >

            </TextView>




        </RelativeLayout>

        <RelativeLayout

            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="1dp">

            <ImageButton
                android:id="@+id/playPrev"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_backarrow"

                >


            </ImageButton>



        </RelativeLayout>
        <RelativeLayout

            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="1dp">

            <ImageButton
                android:id="@+id/play1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_play">


            </ImageButton>



        </RelativeLayout>
        <RelativeLayout

            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="1dp">

            <ImageButton
                android:id="@+id/playNext"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@color/black"
                android:src="@drawable/wrapper_forward">


            </ImageButton>



        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#2A2730"
        android:weightSum="4"
        >

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/liked1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_heart">

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Liked"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/add1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_add"
                >

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Add"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/sr1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_search">

            </ImageButton>

            <TextView
                android:layout_width="99dp"
                android:layout_height="76dp"
                android:gravity="bottom"
                android:text="Search"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2A2730"
                android:src="@drawable/wrapper_ll">

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom"
                android:text="Listen Later"
                android:textAlignment="center"
                android:textColor="@color/white"

                tools:ignore="RtlCompat">

            </TextView>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>